{
  "parser": "babel-eslint",
  "plugins": ["react", "prettier", "jest"],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": false,
    "browser": true,
    "jest/globals": true
  },
  "globals": {
    "localStorage": true,
    "fetch": true,
    "window": true,
    "document": true,
    "App": true,
    "ENV": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": false,
        "singleQuote": true
      }
    ],
    "no-console": 0,
    "react/prop-types": 0,
    "no-unused-vars": 0
  }
}
