= form_for @dataset do |f|
  - if @dataset.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dataset.errors.count, "error")} prohibited this dataset from being saved:"
      %ul
        - @dataset.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :schema_json
    = f.text_field :schema_json
  .field
    = f.label :attribution
    = f.text_field :attribution
  .field
    = f.label :uri
    = f.text_field :uri
  .actions
    = f.submit 'Save'
